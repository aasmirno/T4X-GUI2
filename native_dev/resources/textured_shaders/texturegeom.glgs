#version 420 core
uniform mat4 projection;    //projection matrix

out vec2 texCoord;

layout (points) in;                             //define input as single vertex input (map index)
layout (triangle_strip, max_vertices = 4) out;  //define output as 4 vertices in triangle strip mode 

void main() {
    //set positions and texture coordinates
    gl_Position = projection * gl_in[0].gl_Position;
    texCoord = vec2(0.0,1.0);
    EmitVertex();

    gl_Position = projection * (gl_in[0].gl_Position + vec4(100.0, 0.0, 0.0, 0.0));   //bottom right
    texCoord = vec2(1.0,1.0);
    EmitVertex();

    gl_Position = projection * (gl_in[0].gl_Position + vec4(0.0, 100.0, 0.0, 0.0));   //top left
    texCoord = vec2(0.0,0.0);
    EmitVertex();

    gl_Position = projection * (gl_in[0].gl_Position + vec4(100.0, 100.0, 0.0, 0.0));   //top right
    texCoord = vec2(1.0,0.0);
    EmitVertex();

    EndPrimitive();
}  